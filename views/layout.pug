include header.pug
// ======= Hero Section =======

section#hero
  .container
    .row
      .col-lg-7.pt-5.pt-lg-0.order-2.order-lg-1.d-flex.align-items-center
        div(data-aos='zoom-out')
          h1
            | Pull text from images and PDFs 
            span TXT Extractor
          .text-center.text-lg-left
            a.btn-get-started.scrollto(href='#extract') Get Started
      .col-lg-5.order-1.order-lg-2.hero-img(data-aos='zoom-out' data-aos-delay='300')
        img.img-fluid.animated(src='assets/img/hero-img.png' alt='')
  svg.hero-waves(xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' viewbox='0 24 150 28 ' preserveaspectratio='none')
    defs
      path#wave-path(d='M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z')
    g.wave1
      use(xlink:href='#wave-path' x='50' y='3' fill='rgba(255,255,255, .1)')
    g.wave2
      use(xlink:href='#wave-path' x='50' y='0' fill='rgba(255,255,255, .2)')
    g.wave3
      use(xlink:href='#wave-path' x='50' y='9' fill='#fff')
// End Hero

block content

